<% action = (band.persisted? ? band_url(band.id) : bands_url) %>
<% method = (band.persisted? ? "put" : "post") %>
<% button = (band.persisted? ? "Edit" : "Create") %>

<form action="<%= action %>" method="POST">
<input type="hidden" name="_method" value="<%= method %>">
<%= auth_token %>

  <label for="bandname">What is your band's name?</label>
  <input type="string"
        id="bandname" 
        name="band[name]" value="<%= band.name %>" />

  <input type="submit" value="<%= button %>">
</form>